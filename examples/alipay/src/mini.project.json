{
  "miniprogramRoot": "./",
  "axmlStrictCheck": true,
  "enableParallelLoader": true,
  "component2": true,
  "enableAppxNg": true,
  "scripts": {
    "beforePreview": "npm run compile:ali",
    "beforeUpload": "npm run compile:prod:ali"
